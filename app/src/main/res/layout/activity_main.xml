<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_shadow_start_color">

    <LinearLayout
        android:id="@+id/teams_title_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/football_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_football" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/teams_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/team_a_column"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/team_column_margin"
            android:layout_marginEnd="@dimen/team_column_margin"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <TextView
                android:id="@+id/team_a_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/team_title_padding"
                android:text="@string/team_a"
                android:textColor="@color/text_color"
                android:textSize="@dimen/team_title_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/team_a_goal_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="@dimen/goal_score_padding"
                android:paddingBottom="@dimen/goal_score_padding"
                android:text="@string/score"
                android:textSize="@dimen/goal_score_text_size" />

            <LinearLayout
                android:id="@+id/team_a_penalty_column"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/penalty_column_margin">

                <LinearLayout
                    android:id="@+id/team_a_penalty_score_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/team_a_yellow_card_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/foul"
                        android:textSize="@dimen/penalty_score_text_size" />

                    <TextView
                        android:id="@+id/team_a_red_card_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/foul"
                        android:textSize="@dimen/penalty_score_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/team_a_penalty_icon_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/team_a_yellow_card_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_yellow_card" />

                    <ImageView
                        android:id="@+id/team_a_red_card_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_red_card" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/team_a_button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_spacing"
                android:layout_weight="1"
                android:text="@string/button1" />

            <Button
                android:id="@+id/team_a_button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_spacing"
                android:layout_weight="1"
                android:text="@string/button2" />

            <Button
                android:id="@+id/team_a_button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button3" />

        </LinearLayout>

        <View
            android:id="@+id/team_divider_line"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/team_divider_line_margin"
            android:background="@color/cardview_dark_background">

        </View>

        <LinearLayout
            android:id="@+id/team_b_column"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/team_column_margin"
            android:layout_marginEnd="@dimen/team_column_margin"
            android:layout_weight="1"
            android:orientation="vertical"
            tools:context=".MainActivity">


            <TextView
                android:id="@+id/team_b_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/team_title_padding"
                android:text="@string/team_b"
                android:textColor="@color/text_color"
                android:textSize="@dimen/team_title_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/team_b_goal_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="@dimen/goal_score_padding"
                android:paddingBottom="@dimen/goal_score_padding"
                android:text="@string/score"
                android:textSize="@dimen/goal_score_text_size" />

            <LinearLayout
                android:id="@+id/team_b_penalty_column"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/penalty_column_margin"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/team_b_penalty_score_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/team_b_yellow_card_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/foul"
                        android:textSize="@dimen/penalty_score_text_size" />

                    <TextView
                        android:id="@+id/team_b_red_card_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/foul"
                        android:textSize="@dimen/penalty_score_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/team_b_penalty_icon_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/team_b_yellow_card_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_yellow_card" />

                    <ImageView
                        android:id="@+id/team_b_red_card_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/ic_red_card" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/team_b_button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_spacing"
                android:layout_weight="1"
                android:text="@string/button1" />

            <Button
                android:id="@+id/team_b_button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/button_spacing"
                android:layout_weight="1"
                android:text="@string/button2" />

            <Button
                android:id="@+id/team_b_button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/button3" />

        </LinearLayout>


    </LinearLayout>


    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/reset_button_margin"
        android:onClick="resetAllScores"
        android:text="@string/reset" />

</RelativeLayout>